    <bean id="cumcDataSource" name="cumcDataSource"
          class="org.apache.tomcat.jdbc.pool.DataSource" primary="true">
        <property name="driverClassName" value="${cumc.datasource.driverClassName}"/>
        <property name="url" value="${cumc.datasource.url}"/>
        <property name="username" value="${cumc.datasource.username}"/>
        <property name="password" value="${cumc.datasource.password}" />
        <property name="initialSize" value="5" />
        <property name="maxActive" value="10" />
        <property name="maxIdle" value="5" />
        <property name="minIdle" value="1" />
    </bean>

    <bean id="cumcTransactionAwareDataSource" class="org.springframework.jdbc.datasource.TransactionAwareDataSourceProxy">
        <property name="targetDataSource" ref="cumcDataSource" />
    </bean>

    <bean id="cumcTransactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="cumcTransactionAwareDataSource"/>
    </bean>

    <bean id="cumcJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" primary="false">
        <property name="dataSource" ref="cumcTransactionAwareDataSource"/>
    </bean>


</beans>